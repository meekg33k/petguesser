<div class="container">
    <div class="jumbotron">
        <h2>Result shows that your preferred pet is....</h2>
        <br />
        <br />
        <br />
        <p align="center"><img height="400" weight="400" src='<%= @petimage %>'</img>
        <br />
        <br />
        <br />
        <div class="row">
            <div class="col-sm-1 col-md-1 col-lg-1">
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4">
                <%= form_for :person, url: update_path do |f| %>
                    <div><%= f.hidden_field :id, :value => @id %></div>
                    <div><%= f.hidden_field :pet, :value => @pet %></div>
                    <button class="btn btn-success btn-lg" value="1" type="submit" role="button">
                          <i class="fa fa-check" aria-hidden="true"></i> &nbsp; Correct?
                    </button>
                <% end %>
            </div>
            <div class="col-sm-4 col-md-4 col-lg-4">
            </div>
            <div class="col-sm-3 col-md-3 col-lg-3">
                <%= form_for :person do |f| %>
                    <div><%= f.hidden_field :id, :value => @id %></div>
                    <div><%= f.hidden_field :pet, :value => @notpet %></div>
                    <button class="btn btn-danger btn-lg" value="0" type="submit" role="button">
                          <i class="fa fa-times" aria-hidden="true"></i> &nbsp; Or Wrong?
                    </button>
                <% end %>
            </div>
        </div>
    </div>
</div>